<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="jhotel.jhotel_android_anggi.SelesaiPesananActivity">

    <RelativeLayout
        android:id="@+id/tampilan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="visible">

        <TextView
            android:id="@+id/staticIdPesanan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="left"
            android:text="ID Pesanan:"
            android:textAlignment="center"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/idPesanan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/staticIdPesanan"
            android:text="TextView"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/staticBiaya"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/staticIdPesanan"
            android:layout_marginTop="20dp"
            android:text="Biaya:"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/biaya"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/idPesanan"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/staticIdPesanan"
            android:text="TextView"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/staticHari"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/staticBiaya"
            android:layout_marginTop="20dp"
            android:text="Jumlah Hari: "
            android:textSize="18sp" />

        <TextView
            android:id="@+id/hari"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/biaya"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/staticIdPesanan"
            android:text="TextView"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/staticTanggalPesan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/staticHari"
            android:layout_marginTop="20dp"
            android:text="Tanggal: "
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tanggal_pesan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/hari"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/staticIdPesanan"
            android:text="TextView"
            android:textSize="18sp" />

        <Button
            android:id="@+id/batal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tanggal_pesan"
            android:layout_marginLeft="80dp"
            android:text="Batal" />

        <Button
            android:id="@+id/selesai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/batal"
            android:layout_marginLeft="80dp"
            android:text="Selesai" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
