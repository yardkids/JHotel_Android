<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="jhotel.jhotel_android_anggi.BuatPesananActivity">

    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="320dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/staticRoomNumber"
            android:layout_width="fill_parent"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:textSize="18sp"
            android:text="Room Number :" />

        <TextView
            android:id="@+id/room_number"
            android:layout_width="fill_parent"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:textSize="18sp"
            android:text="TextView" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="280dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/staticTariff"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:textSize="18sp"
            android:text="Tariff :" />

        <TextView
            android:id="@+id/tariff"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:textSize="18sp"
            android:text="TextView" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="280dp"
        android:layout_gravity="center"
        android:layout_height="30dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/staticDurasi"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="Durasi :"
            android:textSize="18sp"
            android:layout_gravity="left"/>

        <EditText
            android:id="@+id/durasi_hari"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_gravity="right"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="280dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/staticTotal"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:textSize="18sp"
            android:text="Total :" />

        <TextView
            android:id="@+id/total_biaya"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:textSize="18sp"
            android:text="TextView" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/hitung"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="Hitung"/>

        <Button
            android:id="@+id/pesan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="Pesan"/>

    </LinearLayout>

</LinearLayout>
